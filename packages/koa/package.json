{
  "name": "@mutoe/koam",
  "author": "mutoe <imutoe@gmail.com>",
  "version": "0.1.0",
  "description": "Simple version Koa-like http-server",
  "keywords": [
    "http-server",
    "koa"
  ],
  "license": "MIT",
  "main": "build/index.js",
  "engines": {
    "node": ">= 14"
  },
  "scripts": {
    "postinstall": "simple-git-hooks",
    "test": "jest --coverage",
    "build": "rm -rf ./build && tsc -p tsconfig.build.json",
    "start": "node -r @swc-node/register src/index.ts",
    "type-check": "tsc --noEmit",
    "lint": "eslint"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged",
    "pre-push": "pnpm type-check && pnpm test"
  },
  "lint-staged": {
    "*.{ts,js,json,yml,yaml,snap}": "eslint --fix"
  },
  "devDependencies": {
    "@mutoe/eslint-config-preset-ts": "2.0.0",
    "@swc-node/core": "^1.9.1",
    "@swc-node/jest": "^1.5.5",
    "@swc-node/register": "^1.5.4",
    "@swc/core": "^1.3.11",
    "@types/jest": "^29.2.0",
    "@types/node": "^14",
    "eslint": "^8.26.0",
    "jest": "^29.2.2",
    "lint-staged": "^13.0.3",
    "simple-git-hooks": "^2.8.1",
    "typescript": "~4.8.4"
  },
  "eslintConfig": {
    "root": true,
    "settings": {
      "jest": 29
    },
    "extends": [
      "@mutoe/eslint-config-preset-ts"
    ],
    "rules": {
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/no-non-null-assertion": "off",
      "unicorn/no-lonely-if": "off"
    }
  },
  "jest": {
    "transform": {
      "^.+\\.(t|j)sx?$": [
        "@swc-node/jest",
        {
          "swc": {
            "sourceMaps": "inline"
          }
        }
      ]
    },
    "clearMocks": true,
    "moduleNameMapper": {
      "src/(.*)": "<rootDir>/src/$1",
      "test/(.*)": "<rootDir>/test/$1"
    },
    "collectCoverageFrom": [
      "src/**"
    ]
  }
}
