{
  "name": "@mutoe/koa",
  "version": "0.1.0",
  "description": "Simple koa implementation",
  "main": "build/index.js",
  "keywords": [
    "http-server",
    "koa"
  ],
  "author": "mutoe <imutoe@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">= 14"
  },
  "scripts": {
    "prepare": "husky install",
    "test": "jest --coverage",
    "build": "tsc -p tsconfig.build.json"
  },
  "devDependencies": {
    "@mutoe/eslint-config-preset-ts": "^2.0.0-alpha.0",
    "@swc/core": "^1.3.10",
    "@swc/jest": "^0.2.23",
    "@types/jest": "^29.2.0",
    "@types/node": "^14",
    "eslint": "^8.26.0",
    "husky": "^8.0.1",
    "jest": "^29.2.1",
    "lint-staged": "^13.0.3",
    "typescript": "~4.8.4"
  },
  "lint-staged": {
    "*.{ts,js}": "eslint --fix"
  },
  "eslintConfig": {
    "extends": [
      "@mutoe/eslint-config-preset-ts"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.(t|j)sx?$": [
        "@swc/jest"
      ]
    },
    "moduleNameMapper": {
      "src/(.*)": "<rootDir>/src/$1"
    }
  }
}
