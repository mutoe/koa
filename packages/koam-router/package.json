{
  "name": "@mutoe/koam-router",
  "author": "mutoe <imutoe@gmail.com>",
  "version": "0.2.1",
  "description": "Simple koa router. Use with @mutoe/koam",
  "keywords": [
    "koa",
    "http-server",
    "router",
    "lightweight"
  ],
  "homepage": "https://github.com/mutoe/koam/tree/main/packages/koam-router",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mutoe/koam.git"
  },
  "bugs": {
    "url": "https://github.com/mutoe/koam/issues"
  },
  "type": "module",
  "module": "build/index.js",
  "types": "build/index.d.ts",
  "scripts": {
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "build": "rm -rf ./build && tsc -p tsconfig.build.json",
    "type-check": "tsc --noEmit"
  },
  "peerDependencies": {
    "@mutoe/koam": "workspace:^0.1.3"
  },
  "devDependencies": {
    "@mutoe/koam": "workspace:^0.2.1"
  },
  "jest": {
    "transform": {
      "^.+\\.(t|j)sx?$": "@swc-node/jest"
    },
    "clearMocks": true,
    "testEnvironment": "node",
    "moduleNameMapper": {
      "src/(.*)": "<rootDir>/src/$1",
      "test/(.*)": "<rootDir>/test/$1"
    },
    "collectCoverageFrom": [
      "src/**"
    ],
    "extensionsToTreatAsEsm": [
      ".ts",
      ".tsx"
    ]
  }
}
